
    <% layout('./layouts/boilerplate') %>

    <h1>All Campgrounds</h1>

    <div>
        <a href="/campgrounds/new">Add new Campground</a>
    </div>

        <% for(let camp of campgrounds) { %>
            <div class="card" mb-3>
                <div class="col-md-4">
                    <img src="img-fluid" alt="" src="<%=camp.image %>">
                   
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=camp.title %></h5>
                        <p class="card-text"><%=camp.description %></p>
                        <p class="card-text">
                            <small class="text-secondary"><%=camp.location %></small>
                        </p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary"><%=camp.title %>View</a>
                    </div>
                </div>
            </div>


           
        <% } %>
    
    
