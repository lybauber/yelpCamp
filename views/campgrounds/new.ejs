<% layout('./layouts/boilerplate') %>


    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input  class="form-control" type="text" name="campground[title]" required id="title">
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input  class="form-control" type="text" name="campground[location]" required id="location">
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div>
                <div class="mb-3">
               
                <!-- <input type="file" name="image" multiple> -->
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input  class="form-control" type="text" name="campground[image]" required id="image">
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group ">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" name="campground[price]" required class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
                        <div class="valid-feedback">
                            Looks good
                        </div>
                      </div>

                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea  class="form-control" type="text" name="campground[description]" required id="description"></textarea>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                </div>
                     
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" placeholder="Recipient's username" aria-label="Choose images" aria-describedby="basic-addon2" multiple>
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
               
            </form>
            <a href="/campgrounds">All Campgrounds</a>
        </div>
    </div>


  

    
    
